<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="@(Url.Content("~/img/favicon.ico"))">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Light Bootstrap Dashboard - Free Bootstrap 4 Admin Dashboard by Creative Tim</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
    <!-- CSS Files -->
    <link href="@(Url.Content("~/css/bootstrap.min.css"))" rel="stylesheet" />
    <link href="@(Url.Content("~/css/light-bootstrap-dashboard.css?v=2.0.0"))" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="@(Url.Content("~/css/demo.css"))" rel="stylesheet" />

    <!--   Core JS Files   -->
    <script src="@(Url.Content("~/js/jquery.3.2.1.min.js"))" type="text/javascript"></script>
    <script src="@(Url.Content("~/js/popper.min.js"))" type="text/javascript"></script>
    <script src="@(Url.Content("~/js/bootstrap.min.js"))" type="text/javascript"></script>
    <!--  Plugin for Switches, full documentation here: http://www.jque.re/plugins/version3/bootstrap.switch/ -->
    <script src="@(Url.Content("~/js/bootstrap-switch.js"))"></script>
    <!--  Chartist Plugin  -->
    <script src="@(Url.Content("~/js/chartist.min.js"))"></script>
    <!--  Notifications Plugin    -->
    <script src="@(Url.Content("~/js/bootstrap-notify.js"))"></script>
    <!-- Control Center for Light Bootstrap Dashboard: scripts for the example pages etc -->
    <script src="@(Url.Content("~/js/light-bootstrap-dashboard.js?v=2.0.0"))" type="text/javascript"></script>
    <!-- Light Bootstrap Dashboard DEMO methods, don't include it in your project! -->
    <script src="@(Url.Content("~/js/demo.js"))"></script>
</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-image="@(Url.Content("~/img/sidebar-5.jpg"))">
            <!--
                Tip 1: You can change the color of the sidebar using: data-color="purple | blue | green | orange | red"

                Tip 2: you can also add an image using data-image tag
            -->
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="javascript:;" class="simple-text">
                        VULKANO PROJECT
                    </a>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <ul class="nav nav-stacked" id="Accordion">
                            <li class="panel">
                                <a class="nav-link" data-toggle="collapse" data-parent="#Accordion" href="#TiketAccordion">
                                    <i class="nc-icon nc-icon nc-paper-2"></i>
                                    <p>Estrategia</p>
                                </a>
                                <ul id="TiketAccordion" class="collapse">
                                    <li>
                                        <a href="@(Url.Action("Crear","Estrategia"))">
                                            <p>Crear Estrategia</p>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@(Url.Action("TicketList","Estrategia"))">
                                            <p>Listar Estrategias</p>
                                        </a>
                                    </li>
                                </ul>

                            </li>
                            <li class="panel">
                                <a class="nav-link" data-toggle="collapse" data-parent="#Accordion" href="#ApplicationAccordion">
                                    <i class="nc-icon nc-bullet-list-67"></i>
                                    <p>Aplicación</p>
                                </a>

                                <ul id="ApplicationAccordion" class="collapse">
                                    <li>
                                        <a href="@(Url.Action("Crear","Application"))">

                                            <p>Agregar Aplicacion</p>
                                        </a>
                                    </li>
                                    <li>Listar Aplicaciones</li>
                                </ul>
                            </li>
                            <li class="panel">
                                <a class="nav-link" data-toggle="collapse" data-parent="#Accordion" href="#HerramientaAccordion">
                                    <i class="nc-icon nc-settings-tool-66"></i>
                                    <p>Herramienta</p>
                                </a>

                                <ul id="HerramientaAccordion" class="collapse">
                                    <li>
                                        <a href="@(Url.Action("Crear","Herramienta"))">

                                            <p>Agregar Herramienta</p>
                                        </a>
                                    </li>
                                    <li>Listar Herramientas</li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg " color-on-scroll="500">
                <div class="container-fluid">
                    <button href="" class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <ul class="nav navbar-nav mr-auto">

                            <li class="dropdown nav-item">
                                <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                                    <i class="nc-icon nc-planet"></i>
                                    <span class="notification">5</span>
                                    <span class="d-lg-none">Notification</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <a class="dropdown-item" href="#">Notification 1</a>
                                    <a class="dropdown-item" href="#">Notification 2</a>
                                    <a class="dropdown-item" href="#">Notification 3</a>
                                    <a class="dropdown-item" href="#">Notification 4</a>
                                    <a class="dropdown-item" href="#">Another notification</a>
                                </ul>
                            </li>
                        </ul>
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="#pablo">
                                    <span class="no-icon">Cerrar sesión</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="content">
                <div class="container-fluid">
                    <div class="section">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <footer class="footer">
                <div class="container-fluid">
                    <nav>
                        <ul class="footer-menu">
                        </ul>
                        <p class="copyright text-center">
                            ©
                            <script>
                                document.write(new Date().getFullYear())
                            </script>
                        </p>
                    </nav>
                </div>
            </footer>
        </div>
    </div>
</body>

<style>
    #Accordion ul, #Accordion ol {
        list-style: none;
    }

    #Accordion li.panel {
        margin-bottom: 0px;
    }
</style>
</html>
